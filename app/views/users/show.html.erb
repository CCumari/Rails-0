<h1>User Profile</h1>

<div class="user-profile">
  <h2>Name: <%= @user.name %></h2>
  <%= gravatar_for @user %>
</div>


<% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= article.user.name if article.user %></td>
        <td><Button><%= link_to 'Show', article_path(article) %></Button></td>
        <td><Button><%= link_to 'Edit', edit_article_path(article) %></Button></td>
        <td><%= button_to 'Delete', article_path(article), method: :delete %></td>
      </tr>
    <% end %>