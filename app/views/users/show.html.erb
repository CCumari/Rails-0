<div class="row">
  <div class="col-md-4">
    <div class="card">
      <div class="card-body text-center">
        <div class="user-profile">
          <%= gravatar_for @user, size: 120 %>
          <h2 class="mt-3"><%= @user.name %></h2>
          <p class="text-muted"><%= @user.email %></p>
          <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-8">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="mb-0">My Articles</h3>
        <%= link_to 'Write New Article', new_article_path, class: "btn btn-primary btn-sm" %>
      </div>
      <div class="card-body">
        <% if @articles.any? %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead class="table-light">
                <tr>
                  <th>Title</th>
                  <th>Content</th>
                  <th>Genre</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @articles.each do |article| %>
                  <tr>
                    <td><strong><%= article.title %></strong></td>
                    <td><%= truncate(article.content, length: 80) %></td>
                    <td><span class="badge bg-secondary"><%= article.genre %></span></td>
                    <td>
                      <div class="btn-group btn-group-sm">
                        <%= link_to 'Show', article_path(article), class: "btn btn-outline-primary btn-sm" %>
                        <%= link_to 'Edit', edit_article_path(article), class: "btn btn-outline-secondary btn-sm" %>
                        <%= button_to 'Delete', article_path(article), method: :delete, 
                            class: "btn btn-outline-danger btn-sm", 
                            confirm: "Are you sure?",
                            form: { style: "display: inline-block;" } %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-4">
            <i class="bi bi-journal-text display-1 text-muted"></i>
            <h4 class="text-muted">No articles yet</h4>
            <p class="text-muted">Start writing your first article!</p>
            <%= link_to 'Write Article', new_article_path, class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>