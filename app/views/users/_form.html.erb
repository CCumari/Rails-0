<%= form_with model: @user, local: true, class: "row g-3" do |form| %>
  <%= render 'shared/error', obj:@user %>

  <div class="col-12">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter your full name" %>
  </div>

  <div class="col-12">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
  </div>

  <div class="col-12">
    <%= form.label :password, class: "form-label" %>
    <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
    <div class="form-text">Password must be at least 6 characters long.</div>
  </div>

  <div class="col-12">
    <%= form.submit(@user.new_record? ? "Create Account" : "Update Profile", 
        class: "btn btn-primary" )%>
    <%= link_to 'Cancel', @user.new_record? ? root_path : user_path(@user), 
        class: "btn btn-secondary ms-2" %>
  </div>
<% end %>