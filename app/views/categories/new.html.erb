<%= form_with model: @category, local: true, class: "row g-3" do |form| %>
  <%= render 'shared/error', obj:@category %>

  <div class="col-12">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter Category" %>
  </div>

  

  <div class="col-12">
    <%= form.submit("Create Category", 
        class: "btn btn-primary" )%>
    <%= link_to 'Cancel', root_path, 
        class: "btn btn-secondary ms-2" %>
  </div>
<% end %>