<h1>List of articles </h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Author</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= article.author %></td>
        <td><Button><%= link_to 'Show', article_path(article) %></Button></td>
        <td><Button><%= link_to 'Edit', edit_article_path(article) %></Button></td>
        <td><%= button_to 'Delete', article_path(article), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<p>
  <%= link_to 'New Article', new_article_path %>
</p>